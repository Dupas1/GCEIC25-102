{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Encargos Trabalhistas",
    "version": "1.0.0"
  },
  "paths": {
    "/ETEC/calcular": {
      "post": {
        "summary": "Calcula encargos com base no salário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "salario": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Encargos calculados com sucesso"
          },
          "400": {
            "description": "Erro de validação"
          }
        }
      }
    }
  }
}
